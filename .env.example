# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/armoured_vehicles_db

# JWT Secrets (change these in production!)
JWT_SECRET=your_jwt_secret_key_here
JWT_REFRESH_SECRET=your_refresh_secret_key_here

# Stripe Payment Gateway Configuration
# Get these keys from https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here

# Stripe Webhook Secret
# Get this from https://dashboard.stripe.com/webhooks
# Used to verify webhook signatures from Stripe
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Application URL (for redirects after payment)
APP_URL=http://localhost:5000

# Node Environment
NODE_ENV=development

# Replit Configuration (if hosting on Replit)
# REPLIT_DOMAINS=your-domain.replit.dev
# REPLIT_DEPLOYMENT=0

# Email Configuration (for Resend)
RESEND_API_KEY=your_resend_api_key_here

# Firebase Configuration (if using Firebase for authentication)
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id

# Optional: Redis Cache (if using for sessions)
# REDIS_URL=redis://localhost:6379

# Optional: Enable Debug Logging
# DEBUG=true
